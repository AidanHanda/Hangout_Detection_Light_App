{
  "manifest_version": 2,
  "name": "Hangout Detection (Light Controller)",
  "description": "Turns on and off the light for the chromebook",
  "icons": {
    "16": "images/icon16.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"

  },
  "version": "1.0.5",
  "app": {
    "background": {
      "scripts": ["js/main.js"],
      "persistent": false
    }
  },
  "permissions": [
    "hid", {
      "usbDevices": [{
        "vendorId": 1240,
        "productId": 256
      },
      {
        "vendorId": 1240,
        "productId": 2856
      }]
    }
  ]
}
